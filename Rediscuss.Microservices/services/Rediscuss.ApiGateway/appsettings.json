{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "swagger-identity": {
                "ClusterId": "identity-cluster",
                "Order": 0,
                "Match": {
                    "Path": "/swagger/identity-cluster/{**path}"
                },
                "Transforms": [
                    { "PathPattern": "/swagger/{**path}" }
                ]
            },
            "swagger-forum": {
                "ClusterId": "forum-cluster",
                "Order": 0,
                "Match": {
                    "Path": "/gateway/Forum/api/{**path}"
                },
                "Transforms": [
                    { "PathPattern": "/api/{**path}" }
                ]
            },
            "identity-routes": {
                "ClusterId": "identity-cluster",
                "Match": {
                    "Path": "/gateway/Identity/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "/IdentityApi/{**catch-all}" }
                ]
            },
            "forum-routes": {
                "ClusterId": "forum-cluster",
                "Match": {
                    "Path": "/gateway/Forum/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "/{**catch-all}" }
                ]
            }
        },
        "Clusters": {
            "identity-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5213"
                    }
                },
                "Metadata": {
                    "Swagger": {
                        "Path": "/swagger/v1/swagger.json",
                        "Name": "Identity API"
                    }
                }
            },
            "forum-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://forum-service:5214"
                    }
                },
                "Metadata": {
                    "Swagger": {
                        "Path": "/api-json",
                        "Name": "Forum API"
                    }
                }
            }
        }
    }
}

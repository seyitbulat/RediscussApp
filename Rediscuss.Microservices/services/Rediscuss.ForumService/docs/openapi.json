  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "Unique user id coming from auth service"
          },
          "username": {
            "type": "string",
            "description": "Username"
          }
        },
        "required": [
          "userId",
          "username"
        ]
      },
      "CreateDiscutDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "GetDiscuitDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdBy": {
            "type": "number"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedBy": {
            "type": "number"
          },
          "CreatedByUsername": {
            "type": "string"
          },
          "UpdatedByUsername": {
            "type": "string"
          },
          "followersCount": {
            "type": "number"
          },
          "isFollowedByCurrentUser": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "CreateFollowDto": {
        "type": "object",
        "properties": {
          "discuitId": {
            "type": "string",
            "description": "Discuit id to follow"
          },
          "userId": {
            "type": "number",
            "description": "User id who follows"
          }
        },
        "required": [
          "discuitId",
          "userId"
        ]
      },
      "GetFollowDto": {
        "type": "object",
        "properties": {
          "discuitId": {
            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "discuit": {
            "$ref": "#/components/schemas/GetDiscuitDto"
          }
        },
        "required": [
          "discuitId",
          "userId",
          "discuit"
        ]
      },
      "RemoveFollowDto": {
        "type": "object",
        "properties": {
          "discuitId": {
            "type": "string",
            "description": "Discuit id to unfollow"
          },
          "userId": {
            "type": "number",
            "description": "User id who unfollows"
          }
        },
        "required": [
          "discuitId",
          "userId"
        ]
      },
      "CreatePostDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "discuitId": {
            "type": "string",
            "description": "Discuit id for the post"
          }
        },
        "required": [
          "title",
          "content",
          "discuitId"
        ]
      },
      "GetPostDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "discuit": {
            "$ref": "#/components/schemas/GetDiscuitDto"
          },
          "createdBy": {
            "type": "number"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedBy": {
            "type": "number"
          },
          "CreatedByUsername": {
            "type": "string"
          },
          "UpdatedByUsername": {
            "type": "string"
          },
          "discuitName": {
            "type": "string"
          },
          "upChips": {
            "type": "number"
          },
          "downChips": {
            "type": "number"
          },
          "totalChips": {
            "type": "number"
          },
          "chipByUser": {
            "type": "number"
          },
          "hotScore": {
            "type": "number"
          }
        },
        "required": [
          "id",
          "title",
          "content",
          "upChips",
          "downChips",
          "totalChips",
          "hotScore"
        ]
      },
      "VoteChipDto": {
        "type": "object",
        "properties": {
          "postId": {
            "type": "string",
            "description": "Target post id"
          },
          "direction": {
            "type": "number",
            "enum": [
              1,
              -1
            ],
            "description": "1 for up, -1 for down"
          }
        },
        "required": [
          "postId",
          "direction"
        ]
      },
      "ResultChipDto": {
        "type": "object",
        "properties": {
          "upVote": {
            "type": "number"
          },
          "downVote": {
            "type": "number"
          }
        },
        "required": [
          "upVote",
          "downVote"
        ]
      }
    }
  }
